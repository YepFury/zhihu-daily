/* pages/comments/comments.wxss */

page {
  background-color: #fff;
}

.title {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #ccc;
  padding: 0 30rpx;
  font-size: 26rpx;
}

.short-item {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
}

.avatar {
  flex: 1;
  text-align: right;
  padding-right: 40rpx;
}

.avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.main {
  flex: 4;
}

.author {
  font-size: 32rpx;
  font-weight: 700;
  height: 60rpx;
  line-height: 60rpx;
}

.likes {
  font-size: 24rpx;
  float: right;
  font-weight: normal;
  color: #bfbfbf;
}

.likes image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: -10rpx;
}

.content {
  padding-right: 60rpx;
  font-size: 28rpx;
  font-weight: normal;
  position: relative;
}

.time {
  font-size: 26rpx;
  color: #ccc;
  height: 80rpx;
  line-height: 80rpx;
}

.replay {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.replay.on {
  -webkit-line-clamp: 0;
}

.author2 {
  font-size: 32rpx;
  font-weight: 700;
}

.open {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  font-size: 28rpx;
  color: #4f4f4f;
  width: 80rpx;
  height: 36rpx;
  line-height: 36rpx;
  background-color: #bfbfbf;
  text-align: center;
}
